<div id="flash-messages" class="fixed top-4 right-4 space-y-2 z-50">
  <% flash.each do |key, message| %>
    <% key_class = case key.to_sym
                   when :notice then "bg-green-100 text-green-800 border-green-400"
                   when :alert then "bg-red-100 text-red-800 border-red-400"
                   when :warning then "bg-yellow-100 text-yellow-800 border-yellow400"
                   else "bg-gray-100 text-gray-800 border-gray-400"
                   end %>
    <div class="p-4 border rounded shadow-lg <%= key_class %>" data-controller="flash" data-action="click->flash#dismiss">
      <p><%= message %></p>
    </div>
  <% end %>
</div>
