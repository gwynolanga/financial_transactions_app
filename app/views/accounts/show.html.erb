<div class="container mx-auto">
  <%= turbo_frame_tag("modal_panel") %>

  <%= render(partial: "accounts/account", locals: { account: @account }) %>

  <div class="mt-16 space-y-4 md:space-y-6">
    <h2 class="font-bold text-2xl">Outgoing and Incoming Transactions</h2>
    <% if @transactions.exists? %>
      <%= turbo_frame_tag("transactions") do %>
        <%= render(partial: 'accounts/transactions_table', locals: { account: @account, transactions: @transactions }) %>
        <%= render(partial: 'layouts/shared/pagination', locals: { pagy: @pagy }) %>
      <% end %>
    <% else %>
      <p>There is no transactions</p>
    <% end %>
  </div>
</div>
