<div class="flex flex-col items-center justify-center h-full w-full mx-auto align-middle">
  <div class="w-full bg-white rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0">
    <div class="p-6 space-y-4 md:space-y-6">
      <h2 class="text-2xl font-bold text-gray-900">Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-4 md:space-y-6'}) do |form| %>
        <%= form.hidden_field :reset_password_token %>

        <div>
          <%= form.label(:password, "Password", class: form_label(resource.errors[:password])) %>
          <%= form.password_field(:password, autofocus: true, autocomplete: "password", placeholder: "Password", class: form_input(resource.errors[:password])) %>
          <%= render_form_error_messages(resource.errors[:password]) %>
          <% if resource.errors[:password].empty? && @minimum_password_length %>
            <em class="block text-sm font-light text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div>
          <%= form.label(:password_confirmation, "Password confirmation", class: form_label(resource.errors[:password_confirmation])) %>
          <%= form.password_field(:password_confirmation, autocomplete: "password_confirmation", placeholder: "Password confirmation", class: form_input(resource.errors[:password_confirmation])) %>
          <%= render_form_error_messages(resource.errors[:password_confirmation]) %>
        </div>

        <div class="flex flex-col sm:flex-row">
          <%= form.submit("Change my password", class: btn_element(:blue, full_width: true)) %>
        </div>
      <% end %>

      <p class="text-base font-light text-gray-600">
        Already have an account? <%= link_to("Sign in", new_session_path(resource_name), class: "font-medium text-blue-600 hover:underline") %>
        <br/>
        No account? <%= link_to("Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:underline") %>
      </p>
    </div>
  </div>
</div>
